<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="css/home.css">
</head>
<body>
    <%- include('../partials/aside-menu.ejs') %>   
    <div id="menu-container" class="main-content">
        <div class="left-side">
            <div class="side-header">
                <h1 class="header-franklin">DISPON√çVEIS</h1>
            </div>
            <div class="side-search-options">
                <div class="search-bar">
                    <input type="search" name="availableSearchBar" placeholder="Pesquisar..." id="left-search">
                    <button type="submit">
                        <img src="icons/search.svg" alt="Pesquisar">
                    </button>
                </div>
                <button class="filter">
                    <select name="filter-select">
                        <option value="name">Nome</option>
                        <option value="type">Tipo</option>
                        <option value="brand">Marca</option>
                    </select>
                </button>
            </div>
            <div class="side-items">
                <% for(i in allEquipaments) { %>
                    <div class="item-box">
                        <div class="item-details">
                            <h2><%= allEquipaments[i].name %></h2>
                            <h3><%= allEquipaments[i].description %></h3>
                            <h3><%= allEquipaments[i].serialNumber%></h3>
                            <div class="item-status">
                                <span class="status-availabe"><%= allEquipaments[i].status%></span>
                            </div>
                        </div>
                        <div class="item-expand">
                            <button>Expandir</button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="line-divisor"></div>

        <div class="left-side">
            <div class="side-header">
                <h1 class="header-franklin">OCUPADOS</h1>
            </div>
            <div class="side-search-options">
                <div class="search-bar">
                    <input type="search" name="available-search-bar" placeholder="Pesquisar...">
                    <button type="submit">
                        <img src="icons/search.svg" alt="Pesquisar">
                    </button>
                </div>
                <button class="filter">
                    <select name="filter-select">
                        <option value="name">Nome</option>
                        <option value="type">Tipo</option>
                        <option value="brand">Marca</option>
                    </select>
                </button>
            </div>
            <div class="side-items">
                <div class="item-box">
                    <div class="item-details">
                        <h2>Nome</h2>
                        <h3>Estado: XXXXX</h3>
                        <h3>Cliente: XXXXX</h3>
                    </div>
                    <div class="item-status"></div>
                    <div class="item-expand"></div>
                </div>
            </div>
        </div>
    </div>

   <script type="module" src="configdb.js"></script> 
</body>
</html>